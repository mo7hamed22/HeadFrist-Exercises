package teat;

/**
 * @author mohamed
 *
 */
import java.util.*;
public class Just_test {
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
        Scanner in = new Scanner(System.in);
       int n ,s=0 ,v=0 ;
       n=in.nextInt();
      int arr[]=new int[n];
      for(int i=0 ; i<n ;i++)
      {
    	  arr[i]=in.nextInt();
      }
      int i  , j ;
     for(i=0,j=(n-1);i<(arr.length/2)&&j>=(arr.length/2);i++,j--)
     {
    	 if(arr[i]>arr[j])
    	 {
    		 s+=arr[i];
    		 ++i;
    	 }
    	 else 
    	 {
    		 s+=arr[j];
    		 --j;
    	 }
    	 if(arr[i]>arr[j])
    	 {
    		 v+=arr[i];
    		 ++i;
    	 }
    	 else 
    	 {
    		 v+=arr[j];
    		 --j;
    	 }
    	 
     }
 System.out.print(s + " "+v);
      
      
    }
}
