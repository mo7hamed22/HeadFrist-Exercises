import java.util.*;
public class Just_test {
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
        Scanner in = new Scanner(System.in);
       int n , c=0  ;
       n=in.nextInt();
        int arr[]=new int[n];
         for (int i = 0; i < arr.length; i++) {
			arr[i]=in.nextInt();
		}
         int x=0,y=0 ;
     for (int i = 0; i < arr.length; i++) {
    	 if(arr[i]>=1&&y>0&&arr[i+1]==-1)
    	 {
    		  x= arr[i]-1;
    		 if(x>0)
    		 {
    			  y=x;
    		 }
    		 else
    		 {
    		 continue;}
    	 }
    	 else if(arr[i]==-1&&arr[i+1]!=1&&y<=0)
    	 {
    		 c++;
    		 if(arr[i+1]>=1)
    		 {
    			 y+=arr[i+1];
    		 }
    		 
    	 }
		
	}
          
      
       System.out.print(c);
     }
      
      
    }

