package teat;

/**
 * @author mohamed
 *
 */
import java.util.*;
public class Just_test {
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
        Scanner sc = new Scanner(System.in);
        
        int n = sc.nextInt();
        int[] a = new int[n+1];
        int count = 1;
        for(int i=1; i<=n; i++){
            a[i] = sc.nextInt();
        }
            for(int j = 1; j<n; j++){
                if(a[j] != a[j+1])
                count++;
            
        
        }
    
        System.out.println(count);
    }
}
