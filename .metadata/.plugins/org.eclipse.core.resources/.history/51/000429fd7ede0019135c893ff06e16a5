import java.util.*;
public class Just_test {
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner(System.in);
		int n ,c=0 ,b=0 ,a ;
		n =in.nextInt();
		for(int i =0 ; i <n ;i++)
		{	
			a =in.nextInt();
			//every time swap for comparing new two entities not as usual
			if(a!=b)
				c++;				
			else a=b;
		}
		System.out.print(c);
	    
		}
	}
	
