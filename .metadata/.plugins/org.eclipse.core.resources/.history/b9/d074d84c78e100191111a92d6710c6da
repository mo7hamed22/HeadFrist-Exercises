package teat;

/**
 * @author mohamed
 *
 */
import java.util.*;
public class Just_test {
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
        Scanner in = new Scanner(System.in);
       int n , c=0 ;
       n=in.nextInt();
       String st;
       st=in.next();
      char str[]=st.toCharArray();
          
       for(int i=0;i<n;i++)
       {
    	   for(int j=0;j<n;j++)
    	   {
    	   if(str[i]==str[++j])
    	   {
    		   c++;
    	   }
    	   else
    		   {++i;
    		   break;}
    	   }
    	  
       }
       System.out.print(c);
     }
      
      
    }

